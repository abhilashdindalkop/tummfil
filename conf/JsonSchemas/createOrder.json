{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "AddProduct",
	"type": "object",
	"properties": {
		"name": {
			"type": "string",
			"maxLength": 100,
			"minLength": 2
		},
		"cityId": {
			"type": "integer"
		},
		"description": {
			"type": "string",
			"minLength": 3,
			"maxLength": 300
		},
		"orderType": {
			"type": "integer"
		},
		"pincode": {
			"type": "integer",
			"minimum": 1
		},
		"phoneNo": {
			"type": "string",
			"minimum": 1
		},
		"address": {
			"type": "string",
			"minLength": 3,
			"maxLength": 300
		},
		"latitude": {
			"type": "number",
			"description": "Location latitude"
		},
		"longitude": {
			"type": "number",
			"description": "Location longitude"
		},
		"orderedProducts": {
			"id": "filters",
			"type": "array",
			"properties": {
				"vendorId": {
					"id": "productId",
					"type": "string"
				},
				"quantity": {
					"type": "integer",
					"minimum": 1
				}
			},
			"additionalProperties": false,
			"required": [
				"vendorId",
				"quantity"
			]
		}
	},
	"additionalProperties": false,
	"required": [
		"name",
		"cityId",
		"orderType",
		"pincode",
		"phoneNo",
		"address"
	]
}